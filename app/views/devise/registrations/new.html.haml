.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      %h1.text-center.login-title Sign Up to continue
      .account-wall
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field.form-group
            = f.label :username
            %br/
            = f.text_field :username, autofocus: true, placeholder: "Enter name", class: 'form-control'
          .field.form-group
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, placeholder: "Email", class: 'form-control'
          .field.form-group
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "off", placeholder: "Password", class: 'form-control'
          .field.form-group
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: 'form-control'
          = f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block'
        = render "devise/shared/links"
  / = content_for :js do
  /   = javascript_include_tag 'home.js'